<!DOCTYPE html>
<html>
  <head>
    <title>JsChallenger</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/c580d027b1.js"></script>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    
    <% [:success, :info, :warning, :danger].each do |message_type| %>
      <% if flash[message_type] %>
        <%= render(partial: 'shared/messages', locals: { messages: flash[message_type], class_name: message_type.to_s }) %>
      <% end %>
    <% end %>
    
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
